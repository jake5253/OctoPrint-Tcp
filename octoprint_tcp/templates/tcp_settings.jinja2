<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Enable TCP') }}</label>
        <div class="controls">
            <input type="checkbox" data-bind="checked: settings.plugins.tcp.enabled" title="{{ _('Enable or disable the TCP connection') }}">
        </div>
    </div>
    <div data-bind="visible: settings.plugins.tcp.enabled()">
        <div class="control-group">
            <label class="control-label">{{ _('Remote Host') }}</label>
            <div class="controls">
                <input type="text" class="input-block-level" data-bind="value: settings.plugins.tcp.remote_host" title="{{ _('Enter the IP address or hostname of the remote TCP server') }}">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">{{ _('Remote Port') }}</label>
            <div class="controls">
                <input type="text" class="input-block-level" data-bind="value: settings.plugins.tcp.remote_port" title="{{ _('Enter the port number of the remote TCP server') }}">
            </div>
        </div>
    </div>
</form>